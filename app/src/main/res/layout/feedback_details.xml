<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/tl_touxian"
        android:layout_width="50dp"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biz_tie_user_avater_vip_down_bg"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:id="@+id/user_avater"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/biz_tie_user_avater_default"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biz_tie_user_avater_vip_up_bg"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

    <TextView
        android:layout_marginLeft="3dp"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="卡卡西"
        android:layout_toRightOf="@id/tl_touxian"
        android:textSize="16dp"
        android:textColor="@color/colorPrimaryDark"
        />
    <TextView
        android:id="@+id/src"
        android:layout_marginLeft="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="广东省东湾市 3分钟前"
        android:layout_toRightOf="@id/tl_touxian"
        android:layout_below="@id/tv_name"
        android:textSize="12dp"
        android:textColor="@color/huise"
        />
    <TextView
        android:id="@+id/content"
        android:layout_marginLeft="3dp"
        android:layout_below="@id/tl_touxian"
        android:layout_toRightOf="@id/tl_touxian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我卡卡，我是评论我卡卡，我是评论我卡卡，我是评论我卡卡，我是评论我卡卡，我是评论我卡卡，我是评论"
        android:textSize="22dp"
        android:textColor="@color/hss"
        />
</RelativeLayout>